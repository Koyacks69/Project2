<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/emptyLayout1"
        android:layout_width="413dp"
        android:layout_height="97dp"
        android:padding="16dp"/>

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="104dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:text="Securely login to your account"
        android:textColor="#8E8E8E" />

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingLeft="10dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/emailLogo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/mail"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:background="@null" />
    </LinearLayout>

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingLeft="10dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/passwordLogo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/lock"
            android:visibility="visible" />

        <EditText
            android:id="@+id/password"
            android:layout_width="303dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14sp"
            android:background="@null" />
    </LinearLayout>

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:id="@+id/rememberMeLayout"
        android:layout_width="374dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remember me"
            android:textColor="@color/black" />
    </LinearLayout>

    <Space
        android:id="@+id/space5"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border_button"
        android:backgroundTint="@null"
        android:text="LOG IN"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Space
        android:id="@+id/space6"
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <TextView
        android:id="@+id/ForgotPasswordLabel"
        android:layout_width="368dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Forgot Password"
        android:textColor="@color/primary" />

    <LinearLayout
        android:id="@+id/createAccountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create An Account"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/signUpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Sign Up" />
    </LinearLayout>

</LinearLayout>
